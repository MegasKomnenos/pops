census.08 = {
	type = empty
	hidden = yes
	
	immediate = {
		if = {
			limit = {
				has_global_variable_list = build_slots_active
					
				global_variable_list_size = { name = build_slots_active value >= 1}
			}
			every_in_global_list = {
				variable = build_slots_active
				
				build_update_project = yes
			}
		}
	}
	
	option = {
	}
}

