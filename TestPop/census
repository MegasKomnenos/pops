census.04 = {
	type = empty
	hidden = yes
	
	immediate = {
		every_province = {
			limit = {
				is_valid_prov = yes
			}
			pop_update_demand = yes
		}
	}
	
	option = {
	}
}

census.05 = {
	type = empty
	hidden = yes
	
	immediate = {
		if = {
			limit = {
				OR = {
					NOT = {
						has_global_variable = trade_link_refresh
					}
					
					global_var:trade_link_refresh = 0
				}
			}
			set_global_variable = { name = trade_link_refresh value = 10 }
			
			trade_set_link = yes
		}
		else = {
			change_global_variable = { name = trade_link_refresh subtract = 1 }
		}
	}
	
	option = {
	}
}

