census.02 = {
	type = empty
	hidden = yes
	
	immediate = {
		mil_main_0 = yes
		stockpile_ai = yes
		
		if = {
			limit = {
				NOT = {
					has_global_variable = sim_i
				}
			}
			every_player = {
				stockpile_player = yes
			}
		}
	}
	
	option = {
	}
}

census.03 = {
	type = empty
	hidden = yes
	
	immediate = {
		every_ruler = {
			limit = {
				is_character = yes
				is_landed = yes
			}
			if = {
				limit = {
					OR = {
						is_ai = yes
						
						has_global_variable = sim_i
					}
				}
				task_ai = yes
			}
			
			task_update = yes
		}
	}
	
	option = {
	}
}

