				county = {
					every_in_list = {
						variable = trade_dat_&goods&
						
						scope:toggle_county_dat = {
							add_to_variable_list = { name = toggled_county_dat_t target = prev }
						}
					}
					every_in_list = {
						variable = array_trade_dat_&goods&
						
